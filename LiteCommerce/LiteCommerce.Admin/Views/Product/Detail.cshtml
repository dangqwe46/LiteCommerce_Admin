            <!-- /.box-body -->

            <div class="box-header with-border">
                <h3 class="box-title">Product Attribute</h3>
            </div>
            <div class="box box-success">
                <div class="box-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="sw-30">
                                    <input type="checkbox" />
                                </th>
                                <th class="sw-50">#</th>
                                <th class="sw-100">Product Name</th>
                                <th class="sw-200">AttributeName</th>
                                <th class="sw-200">AttributeValues</th>
                                <th class="sw-200">DisplayOrder</th>
                                <th class="sw-100"></th>
                            </tr>
                        </thead>

                        <tbody class="text-align">
                            @foreach (var item in ViewData["Attribute"] as List<LiteCommerce.DomainModels.ProductAttributes>)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" name="productIDs" value="@item.AttributeID" />
                                    </td>
                                    <td>
                                        @item.AttributeID
                                    </td>
                                    <td>
                                        <span>@LiteCommerce.BusinessLayers.CatalogBLL.GetProduct(item.ProductID).ProductName</span>
                                    </td>
                                    <td>
                                        @item.AttributeName
                                    </td>
                                    <td>
                                        @item.AttributeValues
                                    </td>
                                    <td>
                                        @item.DisplayOrder
                                    </td>
                                    <td class="text-center">
                                        <!-- Button trigger modal -->
                                        <a href="~/Product/Input/@item.ProductID" class="btn btn-primary center-block">
                                            <i class="fa fa-info"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="box-footer pull-right">
            </div>
