@model LiteCommerce.DomainModels.Product
@{

}

<div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">Information Product</h3>
    </div>
    <div class="box-body">

        <form role="form" action="~/Product/Control" method="post">
            <div class="box-body row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <input type="hidden" name="ProductID" value="@Model.ProductID" />
                        <label for="exampleInputPassword1">Product name <span style="color:red;">(*)</span></label>
                        <input type="text" name="ProductName" class="form-control" id="exampleInputPassword1" placeholder="Enter Product name" value="@Model.ProductName">
                        <div style="color:red;">
                            
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="exampleInputPassword1">Quantity per unit</label>
                                <input type="text" name="QuantityPerUnit" class="form-control" id="exampleInputPassword1" placeholder="Enter Quantity per unit" value="@Model.QuantityPerUnit">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="exampleInputPassword1">Unit Price</label>
                                <input type="text" name="UnitPrice" class="form-control" id="exampleInputPassword1" placeholder="Enter Unit Price" value="@Model.UnitPrice">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputFile">Images</label>
                        <input type="file" id="exampleInputFile">

                        <p class="help-block"></p>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="row">

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Supplier ID</label>
                                <select class="form-control" name="SupplierID">
                                    @foreach (var item in LiteCommerce.BusinessLayers.CatalogBLL.Suppliers_CompanyName())
                                    {
                                        if (item.SupplierID == Model.SupplierID)
                                        {
                                            <option value="@item.SupplierID" selected>@item.CompanyName</option>
                                        }
                                        else
                                        {
                                            <option value="@item.SupplierID">@item.CompanyName</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Catogory ID</label>
                                <select class="form-control" name="CategoryID">
                                    @foreach (var item in LiteCommerce.BusinessLayers.CatalogBLL.Category_CategoryName())
                                    {
                                        if (item.CategoryID == Model.CategoryID)
                                        {
                                            <option value="@item.CategoryID" selected>@item.CategoryName</option>
                                        }
                                        else
                                        {
                                            <option value="@item.CategoryID">@item.CategoryName</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Descrpition</label>
                        <textarea class="form-control" name="Descriptions" rows="3" placeholder="Enter Descrpition...">@Model.Descriptions</textarea>
                    </div>
                </div>
            </div>
            
            <div class="box-footer pull-right">
                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i>Save</button>
                <button type="reset" class="btn btn-white"><i class="fa fa-reset"></i>Cancel</button>
            </div>
        </form>
    </div>
</div>