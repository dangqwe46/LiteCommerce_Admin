@model LiteCommerce.DomainModels.Shipper
@{

}

<div class="box box-primary">
    

    <div class="box-body">
        <form action="~/Shipper/Input" role="form" method="post">
            <div class="form-group">
                <input type="hidden" name="shipperID" value="@Model.ShipperID" />
                <label>Company Name:</label>

                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-building"></i>
                    </div>
                    <input type="text" name="CompanyName" class="form-control" value="@Model.CompanyName">
                </div>
            </div>


            <div class="form-group">


                <label>Phone:</label>
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-phone"></i>
                    </div>
                    <input type="text" name="Phone" class="form-control" value="@Model.Phone">
                </div>



            </div>

            <div class="text-center">
                <button href="~/Shipper/Input" type="submit" class="btn btn-primary ">Save</button>
                <a href="~/Shipper" type="button" class="btn btn-danger ">Cancel</a>
            </div>
        </form>
    </div>



</div>


