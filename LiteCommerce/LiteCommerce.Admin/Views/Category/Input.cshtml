@model LiteCommerce.DomainModels.Category
@{

}

<div class="box box-primary">


    <div class="box-body">
        <form action="~/Category/Input" role="form" method="post">
            <div class="form-group">
                <input type="hidden" name="categoryID" value="@Model.CategoryID" />
                <label>Category Name:</label>

                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-building"></i>
                    </div>
                    <input type="text" name="CategoryName" class="form-control" value="@Model.CategoryName">
                </div>
            </div>


            <div class="form-group">


                <label>Descriptions:</label>
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-file-text"></i>
                    </div>
                    <input type="text" name="Description" class="form-control" value="@Model.Description">
                </div>



            </div>

            <div class="text-center">
                <button href="~/Category/Input" type="submit" class="btn btn-primary ">Save</button>
                <a href="~/Category" type="button" class="btn btn-danger ">Cancel</a>
            </div>
        </form>
</div>



</div>


